<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context=".Activity.RegistActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="10sp"
        android:text="Sign Up"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_gravity="center"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:scrollbarAlwaysDrawVerticalTrack="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10sp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:layout_marginRight="10sp"
                    android:text="구분"
                    android:textColor="@android:color/black"
                    android:background="@drawable/border2"
                    android:textStyle="bold"
                    android:textSize="20sp"/>

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:layout_marginRight="10sp"
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/border1"
                    android:id="@+id/type_radioGroup">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="간부"

                        android:id="@+id/option1"
                        android:buttonTint="#008577"
                        android:checked="true"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"/>

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="용사"
                        android:id="@+id/option2"
                        android:buttonTint="#008577"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"/>


                </RadioGroup>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:layout_marginRight="10sp"
                    android:text="군번"
                    android:textColor="@android:color/black"
                    android:background="@drawable/border2"
                    android:textStyle="bold"
                    android:textSize="20sp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10sp"
                    android:textSize="20sp"
                    android:textColor="@android:color/black"
                    android:background="@drawable/border3"
                    android:textStyle="bold"
                    android:inputType="date"
                    android:paddingLeft="5sp"
                    android:paddingRight="5sp"
                    android:id="@+id/id_editText"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:layout_marginRight="10sp"
                    android:text="비밀번호"
                    android:textColor="@android:color/black"
                    android:background="@drawable/border2"
                    android:textStyle="bold"
                    android:textSize="20sp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10sp"
                    android:textSize="20sp"
                    android:textColor="@android:color/black"
                    android:background="@drawable/border3"
                    android:textStyle="bold"
                    android:inputType="textPassword"
                    android:paddingLeft="5sp"
                    android:paddingRight="5sp"
                    android:id="@+id/password_editText"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:layout_marginRight="10sp"
                    android:text="소속"
                    android:textColor="@android:color/black"
                    android:background="@drawable/border2"
                    android:textStyle="bold"
                    android:textSize="20sp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10sp"
                    android:textSize="20sp"
                    android:textColor="@android:color/black"
                    android:background="@drawable/border3"
                    android:textStyle="bold"
                    android:inputType="text"
                    android:paddingLeft="5sp"
                    android:paddingRight="5sp"
                    android:id="@+id/from_editText"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:layout_marginRight="10sp"
                    android:text="계급"
                    android:textColor="@android:color/black"
                    android:background="@drawable/border2"
                    android:textStyle="bold"
                    android:textSize="20sp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:layout_marginRight="10sp"
                    android:background="@drawable/border3"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:inputType="text"
                    android:paddingLeft="5sp"
                    android:paddingRight="5sp"
                    android:id="@+id/class_editText"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:layout_marginRight="10sp"
                    android:text="이름"
                    android:textColor="@android:color/black"
                    android:background="@drawable/border2"
                    android:textStyle="bold"
                    android:textSize="20sp"/>


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:layout_marginRight="10sp"
                    android:background="@drawable/border3"
                    android:textSize="20sp"
                    android:inputType="text"
                    android:paddingLeft="5sp"
                    android:paddingRight="5sp"
                    android:id="@+id/name_editText"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:layout_marginRight="10sp"
                    android:textColor="@android:color/black"
                    android:background="@drawable/border2"
                    android:textStyle="bold"
                    android:text="연락처"
                    android:textSize="20sp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:layout_marginRight="10sp"
                    android:background="@drawable/border3"
                    android:textSize="20sp"
                    android:inputType="date"
                    android:paddingLeft="5sp"
                    android:paddingRight="5sp"
                    android:id="@+id/tel_editText"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:layout_marginRight="10sp"
                    android:textColor="@android:color/black"
                    android:background="@drawable/border2"
                    android:textStyle="bold"
                    android:text="직속상관군번"
                    android:textSize="20sp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:layout_marginRight="10sp"
                    android:background="@drawable/border3"
                    android:textSize="20sp"
                    android:inputType="date"
                    android:paddingLeft="5sp"
                    android:paddingRight="5sp"
                    android:id="@+id/supervisor_editText"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:layout_marginRight="10sp"
                    android:text="입대일"
                    android:textColor="@android:color/black"
                    android:background="@drawable/border2"
                    android:textStyle="bold"
                    android:textSize="20sp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:layout_marginRight="10sp"
                    android:background="@drawable/border3"
                    android:textSize="20sp"
                    android:inputType="date"
                    android:paddingLeft="5sp"
                    android:paddingRight="5sp"
                    android:id="@+id/start_date_editText"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:layout_marginRight="10sp"
                    android:text="전역일"
                    android:textColor="@android:color/black"
                    android:background="@drawable/border2"
                    android:textStyle="bold"
                    android:textSize="20sp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:layout_marginRight="10sp"
                    android:background="@drawable/border3"
                    android:textSize="20sp"
                    android:inputType="date"
                    android:paddingLeft="5sp"
                    android:paddingRight="5sp"
                    android:id="@+id/end_date_editText"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:gravity="right"
                android:orientation="horizontal">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="가입"
                    android:textSize="20sp"
                    android:id="@+id/regist_btn"
                    android:focusable="false"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="취소"
                    android:textSize="20sp"
                    android:id="@+id/cancel_btn"
                    android:focusable="false"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>