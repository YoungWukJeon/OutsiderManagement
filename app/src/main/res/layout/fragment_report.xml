<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="10sp"
        android:layout_centerHorizontal="true"
        android:text="보고 내역"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:id="@+id/title_textView"/>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:id="@+id/title_linear_layout"
                  android:layout_below="@id/title_textView"
                  android:background="#333">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30sp"
            android:orientation="horizontal"
            android:background="@drawable/border1"
            android:id="@+id/subtitle_linear_layout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textAlignment="center"
                android:text="계급"
                android:background="@drawable/border1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textAlignment="center"
                android:text="군번"
                android:background="@drawable/border1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textAlignment="center"
                android:text="이름"
                android:background="@drawable/border1"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30sp"
            android:layout_weight="2"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textAlignment="center"
            android:text="보고 일자"
            android:background="@drawable/border1"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30sp"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:text="보고 내용"
            android:background="@drawable/border1"/>

    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="3000sp"
        android:layout_marginBottom="10sp"
        android:id="@+id/report_listView"
        android:choiceMode="singleChoice"
        android:layout_below="@id/title_linear_layout"
        android:layout_above="@id/bottom_linear_layout"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:id="@+id/bottom_linear_layout"
        android:background="@android:color/darker_gray">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10sp"
            android:layout_marginLeft="10sp"
            android:layout_weight="1"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:singleLine="true"
            android:textStyle="bold"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:id="@+id/content_editText"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10sp"
            android:textSize="20sp"
            android:focusable="false"
            android:text="보고"
            android:enabled="false"
            android:id="@+id/report_btn"/>

    </LinearLayout>

</RelativeLayout>